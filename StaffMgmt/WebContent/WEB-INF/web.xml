<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>StaffMgmt</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>Welcome.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>authentication.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>authentication.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>registration.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateProfile</servlet-name>
    <servlet-class>employee.UpdateProfile</servlet-class>
  </servlet>
  <servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/authentication/LoginServlet</url-pattern>
	</servlet-mapping> 
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/authentication/LogoutServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/registration/RegisterServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateProfile</servlet-name>
		<url-pattern>/employee/UpdateProfile</url-pattern>
	</servlet-mapping>
	<!--
	<filter> 
		<filter-name>SessionFilter</filter-name> 
		<filter-class>authentication.SessionFilter</filter-class> 
	</filter> 
	<filter-mapping> 
		<filter-name>SessionFilter</filter-name> 
		<url-pattern>/*</url-pattern> 
	</filter-mapping> --> 
</web-app>